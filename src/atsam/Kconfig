# Kconfig settings for Atmel SAM processors

if MACH_ATSAM

config ATSAM_SELECT
    bool
    default y
    select HAVE_GPIO
    select HAVE_GPIO_ADC
    select HAVE_GPIO_I2C
    select HAVE_GPIO_SPI
    select HAVE_GPIO_HARD_PWM
    select HAVE_GPIO_BITBANGING

config BOARD_DIRECTORY
    string
    default "atsam"

choice
    prompt "Processor model"
    config MACH_SAM3X8E
        bool "SAM3x8e (Arduino Due)"
        select MACH_SAM3X
    config MACH_SAM3X8C
        bool "SAM3x8c (Printrboard G2)"
        select MACH_SAM3X
    config MACH_SAM4S8C
        bool "SAM4s8c (Duet Maestro)"
        select MACH_SAM4S
    config MACH_SAM4E8E
        bool "SAM4e8e (Duet Wifi/Eth)"
        select MACH_SAM4E
endchoice

config MACH_SAM3X
    bool
config MACH_SAM4
    bool
config MACH_SAM4S
    bool
    select MACH_SAM4
config MACH_SAM4E
    bool
    select MACH_SAM4

config MCU
    string
    default "sam3x8e" if MACH_SAM3X8E
    default "sam3x8c" if MACH_SAM3X8C
    default "sam4s8c" if MACH_SAM4S8C
    default "sam4e8e" if MACH_SAM4E8E

choice
    depends on MACH_SAM3X && LOW_LEVEL_OPTIONS
    prompt "Processor speed"
    config SAM3X_FREQ_84
        bool "84 MHz (standard)"
    config SAM3X_FREQ_96
        bool "96 MHz (overclock)"
    config SAM3X_FREQ_108
        bool "108 MHz (overclock)"
endchoice

config CLOCK_FREQ
    int
    default 108000000 if SAM3X_FREQ_108
    default 96000000 if SAM3X_FREQ_96
    default 84000000 if MACH_SAM3X
    default 120000000 if MACH_SAM4

config FLASH_START
    hex
    default 0x400000 if MACH_SAM4
    default 0x80000

config FLASH_SIZE
    hex
    default 0x80000

config RAM_START
    hex
    default 0x20000000

config RAM_SIZE
    hex
    default 0x18000 if MACH_SAM3X
    default 0x20000 if MACH_SAM4

config STACK_SIZE
    int
    default 512

config USBSERIAL
    bool "Use USB for communication (instead of serial)"
    default y
config SERIAL
    depends on !USBSERIAL
    bool
    default y

config RPI_SERIAL
    depends on !USBSERIAL
    bool "Use RPi GPIO serial"
    default n
config RPI_RESET_PIN
    depends on RPI_SERIAL
    int "Reset RPi GPIO pin (BCM)"
    default 22
config RPI_ERASE_PIN
    depends on RPI_SERIAL
    int "Erase RPi GPIO pin (BCM)"
    default 8

config BOARD_OULWARE
    depends on MACH_SAM3X8E
    bool "OULWare PrinterController v1.5 or newer"
    default n

config INITIAL_PINS
    string
    default "!PC14" if BOARD_OULWARE
    default ""

endif
